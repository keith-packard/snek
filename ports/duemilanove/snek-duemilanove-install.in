#!/bin/sh

SHAREDIR="@SHAREDIR@"

SNEKHEX="$SHAREDIR/snek-@BOARD@-@SNEK_VERSION@.hex"

action="default"

PORT="@PORT@"

mode=arg

for i in "$@"; do
    case "$mode" in
	arg)
	    case "$i" in
		-hex|--hex)
		    mode=hex
		    ;;
		-port|--port)
		    mode=port
		    ;;
		*)
		      echo "Usage: $0 {-hex snek-@BOARD@.hex} {-port @PORT@}" 1>&2
		      exit 1
		      ;;
	    esac
	    ;;
	hex)
	    SNEKHEX="$i"
	    mode=arg
	    ;;
	port)
	    PORT="$i"
	    mode=arg
    esac
done

avrdude -P $PORT -c arduino -b @BAUD@ -p ATMEGA328P -D -U flash:w:"${SNEKHEX}"
